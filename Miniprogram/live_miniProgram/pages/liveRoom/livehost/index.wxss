.profile-content {
    margin-top: 34rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.profile-content-super {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;

    background-color: var(--themeColor_bg);
}

.profile-info-content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-content: center;
}

.profile-header-name-content {
    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
}

.profile-name-title-content {
    display: flex;
    flex-direction: column;

    max-width: 65%;
    margin-left: 30rpx;
}

.profile-name {
    margin-bottom: 16rpx;
    color: rgba(255, 255, 255, 1);
    font-size: 32rpx;
}

.profile-title {
    color: rgba(145, 152, 159, 1);
    font-size: 28rpx;
}

.profile-header {
    width: 140rpx;
    height: 140rpx;

    background-color: rgba(255, 255, 255, 1);
    border-radius: 70rpx;
}

.profile-attention {
    color: rgba(241, 241, 241, 1);
    font-size: 28rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;

    background-color: rgba(23, 96, 255, 1);
    border-radius: 8rpx;
}

.profile-introduce {
    margin-top: 16rpx;
    font-size: 28rpx;
    color: rgba(86, 93, 109, 1);

    overflow-x: auto;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.profile-detail-content {
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
}

.profile-detail {
    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);
}

.profile-detail-unit {
    font-size: 28rpx;
    color: rgba(145, 152, 159, 1);
    margin-left: 8rpx;
}

.profile-line {
    margin-top: 32rpx;

    height: 2rpx;
    background-color: rgba(255, 255, 255, 0.1);
}

.history-content {
    margin-top: 350rpx;
    margin-left: 0;
    margin-right: 0;
}

.history-cell-content {
    padding-top: 40rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-bottom: 0rpx;

    display: flex;
    flex-direction: row;
}

.history-cell-image {
    width: 330rpx;
    height: 190rpx;

    background-color: rgba(28, 35, 52, 1);
    border-radius: 16rpx;
}

.history-cell-info {
    margin-left: 30rpx;
    display: flex;
    flex-direction: column;
}

.history-cell-name {
    color: rgba(241, 241, 241, 1);
    font-size: 32rpx;
}

.history-cell-date {
    margin-top: 16rpx;
    color: rgba(86, 93, 109, 1);
    font-size: 22rpx;
}