.bottom-mask {
    width: 100%;
    height: 120rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    background-color: rgba(28, 35, 52, 1);

    position: fixed;
    bottom: 0;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-content: center;
    align-items: center;
}

.content-mask {
    width: 100%;
    margin-bottom: 136rpx;
}

.bottom-recharge {
    width: 210rpx;
    height: 90rpx;

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

    color: rgba(241, 241, 241, 1);
    background-color: rgba(23, 96, 255, 1);
    border-radius: 6rpx;
}

.bottom-value-colum {
    display: flex;
    flex-direction: column;
    justify-content: start;
}

.bottom-value-tip {
    font-size: 28rpx;
    color: rgba(145, 152, 159, 1);
}

.bottom-value {
    font-size: 40rpx;
    color: rgba(255, 255, 255, 1);
}

.recharge-base-text {
    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);

    margin-left: 30rpx;
    margin-right: 30rpx;
}

.recharge-list-content {
    margin-right: 30rpx;

    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.recharge-list-value-content {
    width: 33.3333333333333333%;
    height: 110rpx;

    padding-left: 30rpx;
    padding-top: 20rpx;
}

.recharge-list-value {
    height: 100%;
    font-size: 36rpx;

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;

    border-radius: 8rpx;
}

.amount-input-content {
    margin-top: 32rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    padding-bottom: 10rpx;

    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;

    border-bottom: solid 2rpx rgba(255, 255, 255, 0.1);
}

.amount-input-unit {
    font-size: 28rpx;
    color: rgba(241, 241, 241, 1);

    margin-left: 4rpx;
}

.amount-input-line {
    width: 2rpx;
    height: 26rpx;
    margin-left: 14rpx;
    margin-right: 14rpx;

    background-color: rgba(145, 152, 159, 1);
}

.amount-input {
    width: 100%;
    font-size: 28rpx;
    color: rgba(255, 255, 255, 1);
}

.amount-input-placeholder {
    font-size: 28rpx;
    color: rgba(86, 93, 109, 1);
}

.payway-content {
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 16rpx;
    padding-left: 40rpx;
    padding-right: 32rpx;
    height: 112rpx;

    background-color: rgba(28, 35, 52, 1);
    border-radius: 8rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-content: center;
}

.payway-icon-name {
    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
}

.payway-icon-style {
    width: 44rpx;
    height: 44rpx;
}

.payway-name {
    font-size: 28rpx;
    color: rgba(241, 241, 241, 1);
    margin-left: 36rpx;
}