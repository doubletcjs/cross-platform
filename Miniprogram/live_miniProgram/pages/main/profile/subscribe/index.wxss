.subscribe {
    width: 100%;
    height: 100%;

    position: relative;
}

.subscribe-empty-content {
    width: 100%;
    height: 100rpx;

    padding-right: 30rpx;

    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    align-content: center;

    background-color: rgba(21, 25, 40, 1);
    position: fixed;
    top: 0;
}

.subscribe-empty {
    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);
}

.subscribe-cell-content {
    width: 100%;
}

.subscribe-anchor-cell {
    background-color: rgba(27, 31, 45, 1);
    border-radius: 15rpx;

    margin-left: 30rpx;
    margin-right: 30rpx;

    margin-bottom: 40rpx;
    padding-left: 30rpx;
    padding-top: 32rpx;
    padding-right: 30rpx;
    padding-bottom: 32rpx;

    display: flex;
    flex-direction: row;
}

.subscribe-anchor-center-column {
    display: flex;
    flex-direction: column;
    align-items: center;
    align-content: center;
}

.subscribe-anchor-left-column {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    align-content: flex-start;

    margin-left: 30rpx;
    width: 90%;

    position: relative;
}

.subscribe-anchor-head {
    width: 140rpx;
    height: 140rpx;

    border-radius: 70rpx;
}

.subscribe-anchor-name {
    font-size: 28rpx;
    color: rgba(0, 234, 181, 1);

    margin-top: 16rpx;
}

.subscribe-anchor-label {
    font-size: 22rpx;
    color: rgba(86, 93, 109, 1);

    margin-top: 8rpx;
}

.subscribe-anchor-title {
    height: 88rpx;
    font-size: 32rpx;
    color: rgba(255, 255, 255, 1);
    font-weight: bolder;

    margin-top: 18rpx;

    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    white-space: normal !important;
    overflow: hidden;
    text-overflow: ellipsis;
}

.subscribe-anchor-date {
    font-size: 28rpx;
    color: rgba(145, 152, 159, 1);

    margin-top: 16rpx;
}

.subscribe-anchor-status {
    border-radius: 8rpx;

    padding-top: 10rpx;
    padding-bottom: 10rpx;

    font-size: 28rpx;
    margin-top: 16rpx;
}

.subscribe-account-cell {
    width: 100%;

    /* padding-left: 26rpx;
    padding-right: 34rpx; */
    padding-top: 32rpx;
    padding-bottom: 32rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-content: center;

    border-bottom: solid 2rpx rgba(255, 255, 255, 0.05);
}

.subscribe-account-base-row {
    display: flex;
    flex-direction: row;

    margin-left: 34rpx;
}

.subscribe-account-base-column {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    align-content: flex-start;

    width: 50%;
    margin-left: 16rpx;
}

.subscribe-account-head {
    width: 108rpx;
    height: 108rpx;

    border-radius: 54rpx;
}

.subscribe-account-name {
    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);
}

.subscribe-account-introduction {
    font-size: 22rpx;
    color: rgba(145, 152, 159, 1);

    margin-top: 8rpx;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    white-space: normal !important;
    overflow: hidden;
    text-overflow: ellipsis;
}

.subscribe-account-status {
    border-radius: 8rpx;
    height: 60rpx;
    font-size: 28rpx;

    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
    justify-content: center;

    margin-right: 26rpx;
}