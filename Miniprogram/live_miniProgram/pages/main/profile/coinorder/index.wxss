 .order-header-content {
     width: 100%;
     height: 488rpx;

     background-color: rgba(21, 25, 40, 1);
     border-bottom: solid 20rpx rgba(0, 0, 0, 0.5);

     position: fixed;
     top: 0;

     display: flex;
     flex-direction: column;
     padding-right: 30rpx;
     padding-left: 30rpx;
 }

 .order-date-content {
     width: 100%;

     display: flex;
     flex-direction: row;
     align-items: center;
     align-content: center;

     padding-top: 24rpx;
     padding-bottom: 34rpx;
 }

 .order-date-text {
     font-size: 22rpx;
     color: rgba(241, 241, 241, 1);
 }

 .order-date-icon {
     width: 32rpx;
     height: 32rpx;
 }

 .order-coin-image {
     width: 100%;
     height: 264rpx;

     position: relative;
 }

 .order-coin-content {
     width: 100%;
     height: 264rpx;

     position: absolute;
     top: 0;

     display: flex;
     flex-direction: column;

     padding-left: 30rpx;
     padding-top: 32rpx;
     padding-right: 30rpx;
     padding-bottom: 30rpx;
 }

 .order-coin-title {
     font-size: 28rpx;
     color: rgba(241, 241, 241, 1);
 }

 .order-coin-row {
     display: flex;
     flex-direction: row;
     align-items: flex-end;
     align-content: flex-end;

     margin-top: 32rpx;
 }

 .order-coin-number {
     font-size: 56rpx;
     color: rgba(241, 241, 241, 1);
     font-weight: bolder;
 }

 .order-coin-unit {
     font-size: 22rpx;
     color: rgba(241, 241, 241, 1);

     margin-bottom: 14rpx;
 }

 .order-coin-function-row {
     display: flex;
     flex-direction: row;
     justify-content: flex-end;
     align-items: flex-end;
     align-content: flex-end;

     margin-top: 10rpx;
 }

 .order-item-content {
     height: 90rpx;

     position: absolute;
     bottom: 0;
     left: 0;
     right: 0;

     padding-left: 30rpx;
     padding-right: 30rpx;

     display: flex;
     flex-direction: row;
     justify-content: space-around;
     align-items: center;
     align-content: center;
 }

 .order-item-cover {
     height: 100%;

     position: relative;

     display: flex;
     flex-direction: row;
     justify-content: center;
     align-items: center;
     align-content: center;

     padding-left: 80rpx;
     padding-right: 80rpx;
 }

 .order-item-text {
     font-size: 32rpx;
 }

 .order-item-line {
     width: 64rpx;
     height: 6rpx;

     position: absolute;
     bottom: 0;
 }

 .order-cell-content {
     position: absolute;
     top: 488rpx;
     bottom: 0;
     left: 0;
     right: 0;

     display: flex;
     flex-direction: column;
 }

 .order-cell {
     display: flex;
     flex-direction: row;
     justify-content: space-between;

     padding-left: 30rpx;
     padding-right: 30rpx;
     padding-top: 24rpx;
     padding-bottom: 24rpx;

     border-bottom: solid 2rpx rgba(241, 241, 241, 0.05);
 }

 .order-cell-row {
     display: flex;
     flex-direction: row;
 }

 .order-cell-icon {
     width: 64rpx;
     height: 64rpx;
 }

 .order-cell-column {
     display: flex;
     flex-direction: column;
     justify-content: center;
     align-items: flex-start;
     align-content: flex-start;

     margin-left: 64rpx;
 }

 .order-cell-name {
     font-size: 22rpx;
     color: rgba(241, 241, 241, 1);
 }

 .order-cell-date {
     font-size: 22rpx;
     color: rgba(145, 152, 159, 1);

     margin-top: 6rpx;
 }

 .order-cell-coin {
     font-size: 36rpx;
     color: rgba(241, 241, 241, 1);
 }


 .order-cell-unit {
     font-size: 18rpx;
     color: rgba(241, 241, 241, 1);

     margin-bottom: 8rpx;
 }