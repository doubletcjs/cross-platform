.profile-header-info-content {
    margin-top: 52rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-between;

    position: relative;
}

.profile-header-base-row {
    display: flex;
    flex-direction: row;
}

.profile-header-info-head {
    width: 108rpx;
    height: 108rpx;

    border-radius: 54rpx;
}

.profile-header-info-name {
    width: 55%;

    margin-left: 30rpx;
    font-size: 40rpx;
    color: rgba(241, 241, 241, 1);

    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    white-space: normal !important;
    overflow: hidden;
    text-overflow: ellipsis;
}

.profile-header-info-icon {
    width: 64rpx;
    height: 64rpx;
}


.profile-header-info-message-count {
    font-size: 20rpx;
    color: rgba(241, 241, 241, 1);
    border-radius: 18rpx;
    background-color: rgba(255, 52, 101, 1);

    padding-left: 14rpx;
    padding-right: 14rpx;
    padding-top: 4rpx;
    padding-bottom: 4rpx;

    position: absolute;
    right: 0;
    top: 0;
}

.profile-header-item-content {
    margin-top: 60rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.profile-header-item-column {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    align-items: center;
}

.profile-header-item-number {
    font-size: 40rpx;
    color: rgba(241, 241, 241, 1);
    font-weight: bolder;
}

.profile-header-item-name {
    margin-top: 12rpx;
    font-size: 22rpx;
    color: rgba(145, 152, 159, 1);
}

.profile-header-coin-mask {
    margin-top: 60rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    height: 230rpx;

    position: relative;
}

.profile-header-coin-content {
    height: 100%;
    padding-left: 30rpx;
    padding-top: 40rpx;
    padding-right: 30rpx;
    padding-bottom: 38rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-between;

    position: absolute;
    left: 0;
    top: 0;
    right: 0;
}

.profile-header-coin-background {
    width: 100%;
    height: 100%;

    position: absolute;
    left: 0;
    top: 0;
    right: 0;
}

.profile-header-coin-base-column {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.profile-header-coin {
    font-size: 28rpx;
    color: rgba(241, 241, 241, 1);
}

.profile-header-coin-number {
    font-size: 56rpx;
    color: rgba(241, 241, 241, 1);
}

.profile-header-coin-unit {
    font-size: 22rpx;
    color: rgba(241, 241, 241, 1);

    margin-bottom: 12rpx;
}

.profile-header-coin-order {
    font-size: 22rpx;
    color: rgba(145, 152, 159, 1);

    margin-top: 4rpx;
}

.profile-header-coin-arrow {
    width: 12.26rpx;
    height: 20.5rpx;

    margin-left: 4rpx;
    margin-top: 4rpx;
}

.profile-header-coin-recharge {
    padding-left: 30rpx;
    padding-top: 10rpx;
    padding-right: 30rpx;
    padding-bottom: 10rpx;

    font-size: 28rpx;
    color: rgba(241, 241, 241, 1);

    border-radius: 8rpx;
    border: solid 2rpx rgba(241, 241, 241, 1);
}

.profile-order-content {
    background-color: rgba(28, 35, 52, 1);
    border-radius: 12rpx;
    display: flex;
    flex-direction: column;

    margin-top: 40rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.profile-order-item-content {
    padding-top: 32rpx;
    padding-bottom: 40rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.profile-order-item-column {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    align-items: center;

    position: relative;
}

.profile-order-item-icon {
    width: 48rpx;
    height: 48rpx;
}

.profile-order-item-name {
    margin-top: 16rpx;
    font-size: 22rpx;
    color: rgba(145, 152, 159, 1);
}