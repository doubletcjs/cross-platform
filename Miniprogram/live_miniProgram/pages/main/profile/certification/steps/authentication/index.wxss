.authentication-content {
    width: 100%;

    display: flex;
    flex-direction: column;
    align-items: center;
    align-content: center;
}

.authentication-image {
    width: 360rpx;
    height: 360rpx;

    margin-top: 40rpx;
}

.authentication-text {
    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);

    margin-top: 16rpx;
}

.authentication-tip {
    font-size: 22rpx;
    color: rgba(145, 152, 159, 1);

    margin-top: 32rpx;
}

.authentication-bottom-button {
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 80rpx;

    height: 94rpx;
    background-color: rgba(23, 96, 255, 1);
    border-radius: 10rpx;

    font-size: 36rpx;
    color: rgba(241, 241, 241, 1);

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-content: center;
    align-items: center;
}