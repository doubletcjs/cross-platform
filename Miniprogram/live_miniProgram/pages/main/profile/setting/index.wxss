.setting-content {
    width: 100%;
    height: 100%;
    background-color: rgba(21, 25, 40, 1);
}

.setting-base-cell {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-content: center;

    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-top: 24rpx;
    padding-bottom: 24rpx;

    background-color: rgba(28, 35, 52, 1);
}

.setting-base-cell-name {
    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);
}

.setting-base-cell-arrow {
    width: 14rpx;
    height: 28rpx;
}

.setting-account-content {
    display: flex;
    flex-direction: column;
}

.setting-account-line {
    margin-left: 30rpx;
    background-color: rgba(241, 241, 241, 0.1);
    height: 2rpx;
}

.setting-account-head {
    width: 108rpx;
    height: 108rpx;
    border-radius: 54rpx;
}

.setting-account-row {
    display: flex;
    flex-direction: row;
}

.setting-account-column {
    margin-left: 30rpx;
    width: 75%;

    display: flex;
    flex-direction: column;
    align-items: flex-start;
    align-content: flex-start;
}

.setting-account-name {
    font-size: 40rpx;
    color: rgba(241, 241, 241, 1);

    overflow: hidden;
    text-overflow: ellipsis;
}

.setting-account-introduction {
    font-size: 24rpx;
    color: rgba(145, 152, 159, 1);

    overflow: hidden;
    text-overflow: ellipsis;
}