.coupons-title {
    width: 100%;
    padding-left: 30rpx;
    padding-right: 30rpx;

    border-bottom: solid 2rpx rgba(145, 152, 159, 0.1);

    display: flex;
    flex-direction: row;
    justify-content: flex-end;

    background-color: rgba(21, 25, 40, 1);
    position: fixed;
    top: 0;
}

.coupons-title-button {
    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);

    padding-top: 24rpx;
    padding-bottom: 22rpx;
}

.coupons-content {
    width: 100%;

    padding-left: 30rpx;
    padding-right: 30rpx;

    margin-bottom: 40rpx;

    position: relative;
    top: 90rpx;
}

.coupons-list-cell {
    width: 100%;
    height: 202rpx;

    margin-top: 40rpx;

    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;

    position: relative;
}

.coupons-list-cell-backgroud {
    height: 100%;

    position: absolute;
    top: 0;
}

.coupons-list-cell-receive {
    width: 28rpx;
    height: 100%;

    padding-left: 45rpx;
    padding-right: 45rpx;

    border-left: solid 2rpx rgba(0, 0, 0, 0.1);
    position: absolute;
    top: 0;
    right: 0;

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-content: center;
    align-items: center;

    font-size: 28rpx;
    text-align: center;
}

.coupons-price-column {
    width: 190rpx;
    height: 100%;

    position: absolute;
    top: 0;
    left: 0;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    align-items: center;
}

.coupons-price-row {
    display: flex;
    flex-direction: row;
    align-content: flex-end;
    align-items: flex-end;
}

.coupons-price {
    font-size: 60rpx;
    color: rgba(254, 249, 221, 1);
    font-weight: bold;

    margin-left: 8rpx;
}

.coupons-price-unit {
    font-size: 28rpx;
    color: rgba(254, 249, 221, 1);

    margin-bottom: 10rpx;
}

.coupons-fullprice {
    font-size: 28rpx;
    color: rgba(254, 249, 221, 1);

    margin-top: 6rpx;
}

.coupons-content-column {
    width: 58%;
    height: 100%;

    position: absolute;
    top: 0;
    left: 190rpx;

    padding-left: 30rpx;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: flex-start;
    align-items: flex-start;
}

.coupons-name {
    font-size: 32rpx;
    color: rgba(53, 53, 53, 1);
}

.coupons-date-range {
    font-size: 22rpx;
    color: rgba(178, 178, 178, 1);

    margin-top: 16rpx;
}