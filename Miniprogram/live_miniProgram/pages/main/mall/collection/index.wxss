.collection {
    width: 100%;
    height: 100%;

    position: relative;
}

.collection-function-content {
    width: 100%;
    /* height: 104rpx; */

    padding-right: 30rpx;
    padding-top: 48rpx;
    padding-bottom: 52rpx;

    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    align-content: center;

    position: fixed;
    top: 0;

    background-color: rgba(21, 25, 40, 1);
    z-index: 1;
}

.collection-function-text {
    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);

    margin-left: 30rpx;
}

.collection-function-search {
    width: 44rpx;
    height: 44rpx;
}

.collection-cell-centent {
    position: absolute;
    top: 144rpx;
    left: 0;
    right: 0;

    z-index: 0;
}

.collection-cell-mask {
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-bottom: 40rpx;

    display: flex;
    flex-direction: row;
}

.collection-cell {
    display: flex;
    flex-direction: row;

    padding-left: 20rpx;
    padding-top: 32rpx;
    padding-bottom: 32rpx;

    background-color: rgba(28, 35, 52, 1);
    border-radius: 12rpx;
}

.collection-cell-cover {
    width: 236rpx;
    height: 210rpx;
    border-radius: 12rpx;
}

.collection-cell-column {
    display: flex;
    flex-direction: column;
    justify-content: space-between;

    margin-left: 20rpx;
}

.collection-cell-row {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
    align-content: flex-end;

    margin-bottom: 6rpx;
}

.collection-cell-title {
    font-size: 32rpx;
    color: rgba(255, 255, 255, 1);

    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    white-space: normal !important;
    overflow: hidden;
    text-overflow: ellipsis;

    margin-top: 2rpx;
}

.collection-cell-price-row {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    align-content: flex-end;
}

.collection-cell-unit {
    font-size: 18rpx;
    color: rgba(255, 52, 101, 1);

    margin-bottom: 4rpx;
    margin-right: 4rpx;
}

.collection-cell-price {
    font-size: 32rpx;
    font-weight: bold;
    color: rgba(255, 52, 101, 1);
}

.collection-cell-count {
    font-size: 22rpx;
    color: rgba(145, 152, 159, 1);

    margin-bottom: 4rpx;
}

.collection-cell-edit-content {
    width: 150rpx;
    height: 274rpx;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    align-content: center;
}

.collection-cell-edit-icon {
    width: 44rpx;
    height: 44rpx;
}

.collection-cell-select-function-content {
    background-color: rgba(28, 35, 52, 1);
    width: 100%;
    height: 90rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-content: center;

    position: fixed;
    bottom: 0;
}

.collection-cell-select-all-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
}

.collection-cell-select-all-icon {
    width: 44rpx;
    height: 44rpx;

    margin-left: 52rpx;
}

.collection-cell-select-all-text {
    margin-left: 24rpx;
    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);
}

.collection-cell-delete {
    margin-right: 30rpx;

    padding-left: 30rpx;
    padding-top: 10rpx;
    padding-right: 30rpx;
    padding-bottom: 10rpx;

    background-color: rgba(255, 52, 101, 1);
    border-radius: 8rpx;

    font-size: 28rpx;
    color: rgba(241, 241, 241, 1);
}