.address-base-cell {
    padding-left: 30rpx;
    padding-right: 30rpx;

    padding-top: 30rpx;
    padding-bottom: 30rpx;

    border-bottom: solid 2rpx rgba(241, 241, 241, 0.05);

    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;

    background-color: rgba(28, 35, 52, 1);
}

.address-base-text {
    font-size: 28rpx;
    color: rgba(145, 152, 159, 1);
}

.address-confirm-content {
    margin-top: 76rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;

    height: 94rpx;
    background-color: rgba(23, 96, 255, 1);
    border-radius: 10rpx;

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;

    font-size: 36rpx;
    color: rgba(241, 241, 241, 1);
}

.address-base-input {
    font-size: 28rpx;
    color: rgba(255, 255, 255, 1);
}

.address-base-input-placeholder {
    font-size: 28rpx;
    color: rgba(86, 93, 109, 1);

}

.phone-code-content {
    margin-left: 36rpx;

    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;

    font-size: 28rpx;
    color: rgba(241, 241, 241, 1);
}

.phone-code-arrow {
    margin-left: 26rpx;
    width: 32rpx;
    height: 32rpx;
}

.label-content-mask {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    margin-left: 92rpx;

    width: 75%;
}

.label-content-cover {
    max-width: 400rpx;
    /* padding-right: 30rpx; */
    padding-right: 30rpx;

}

.label-content-text {
    max-width: 400rpx;
    font-size: 22rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    height: 34rpx;

    border-radius: 17rpx;

    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    white-space: normal !important;
    overflow: hidden;
    text-overflow: ellipsis;
}