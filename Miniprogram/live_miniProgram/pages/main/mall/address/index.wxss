.address-mask {
    width: 100%;
    padding-bottom: 124rpx;
}

.address-cell-content {
    width: 100%;
    margin-bottom: 30rpx;

    background-color: rgba(28, 35, 52, 1);

    display: flex;
    flex-direction: column;
}

.address-cell-base {
    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-bottom: 34rpx;
    padding-top: 34rpx;

    border-bottom: solid 2rpx rgba(241, 241, 241, 0.1);

    display: flex;
    flex-direction: row;
}

.address-cell-icon {
    width: 90rpx;
    height: 90rpx;
}

.address-cell-column {
    margin-left: 30rpx;
    width: 80%;

    display: flex;
    flex-direction: column;
}

.address-cell-base-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
}

.address-cell-base-text {
    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);
}

.address-cell-address {
    font-size: 28rpx;
    color: rgba(145, 152, 159, 1);

    margin-top: 6rpx;
}

.address-cell-label {
    font-size: 22rpx;
    color: rgba(241, 241, 241, 1);
    background-color: rgba(23, 96, 255, 1);
    padding-left: 20rpx;
    padding-right: 20rpx;
    height: 32rpx;
    margin-left: 20rpx;

    border-radius: 16rpx;
}

.address-cell-function-content {
    width: 100%;
    height: 90rpx;

    padding-left: 30rpx;
    padding-right: 30rpx;

    background-color: rgba(28, 35, 52, 1);

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-content: center;
}

.address-cell-function-icon {
    width: 32rpx;
    height: 32rpx;
}

.address-cell-function-text {
    font-size: 28rpx;
    color: rgba(86, 93, 109, 1);

    margin-left: 20rpx;
}


.address-cell-function-right-text {
    font-size: 28rpx;
    color: rgba(145, 152, 159, 1);
}

.address-confirm-content {
    position: fixed;
    left: 30rpx;
    right: 30rpx;
    bottom: 12rpx;

    height: 94rpx;
    background-color: rgba(23, 96, 255, 1);
    border-radius: 10rpx;

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;
}

.address-confirm-icon {
    width: 36rpx;
    height: 36rpx;
}

.address-confirm-text {
    font-size: 36rpx;
    color: rgba(241, 241, 241, 1);

    margin-left: 12rpx;
}