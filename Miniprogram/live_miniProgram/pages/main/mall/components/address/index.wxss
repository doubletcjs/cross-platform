.i-modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    transition: all 0.2s ease-in-out;
    opacity: 0;
    visibility: hidden;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;

    background-color: rgba(0, 0, 0, 0.4);
}

.i-modal-mask-show {
    opacity: 1;
    visibility: visible;
}

.address-content {
    width: 100%;

    background-color: rgba(21, 25, 40, 1);
    border-top-left-radius: 40rpx;
    border-top-right-radius: 40rpx;

    position: relative;
}

.address-title {
    padding-left: 30rpx;
    padding-top: 80rpx;

    font-size: 40rpx;
    color: rgba(241, 241, 241, 1);
}

.address-close {
    width: 48rpx;
    height: 48rpx;

    position: absolute;
    top: 46rpx;
    right: 30rpx;
}

.address-select-other {
    height: 94rpx;

    background-color: rgba(23, 96, 255, 1);
    border-radius: 47rpx;

    position: absolute;
    left: 30rpx;
    right: 30rpx;
    bottom: 12rpx;

    font-size: 36rpx;
    color: rgba(241, 241, 241, 1);

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-content: center;
    align-items: center;
}

.address-list-content {
    padding-left: 30rpx;
    padding-right: 30rpx;
    margin-top: 40rpx;
    margin-bottom: 126rpx;

    height: 600rpx;
    overflow: scroll;
}

.address-list-cell {
    width: 100%;
    margin-bottom: 40rpx;

    padding-left: 34rpx;
    padding-right: 34rpx;
    padding-top: 26rpx;
    padding-bottom: 24rpx;

    background-color: rgba(28, 35, 52, 1);
    border-radius: 48rpx;

    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;
}

.address-list-icon {
    width: 32rpx;
    height: 32rpx;
}

.address-list-column {
    width: 85%;
    margin-left: 56rpx;
}

.address-list-text {
    font-size: 28rpx;
    color: rgba(145, 152, 159, 1);
}

.address-list-default {
    width: 124rpx;
    height: 28rpx;

    margin-top: 16rpx;
}