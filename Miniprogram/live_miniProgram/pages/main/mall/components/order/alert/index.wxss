.alert-content {
    width: 100%;
    height: 176rpx;

    background: linear-gradient(87deg, rgba(23, 96, 255, 1) 0%, rgba(71, 28, 255, 1) 100%);
    opacity: 1;

    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.alert-text {
    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);

    margin-left: 30rpx;
    z-index: 1500;
}

.alert-icon {
    width: 258rpx;
    height: 108rpx;

    position: absolute;
    top: 34rpx;
    right: 30rpx;
    z-index: 0;
}