.groups-product-column {
    display: flex;
    flex-direction: column;

    position: relative;
}

.groups-product-cell {
    display: flex;
    flex-direction: row;

    margin-bottom: 40rpx;
}

.groups-product-base-row {
    display: flex;
    flex-direction: row;
}

.groups-product-cover {
    width: 310rpx;
    height: 276rpx;

    border-radius: 12rpx;
}

.groups-product-title {
    font-size: 32rpx;
    color: rgba(255, 255, 255, 1);

    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    white-space: normal !important;
    overflow: hidden;
    text-overflow: ellipsis;
}

.groups-product-unit {
    font-size: 18rpx;
    color: rgba(255, 52, 101, 1);
    font-weight: bolder;

    margin-bottom: 4rpx;
}

.groups-product-price {
    font-size: 32rpx;
    color: rgba(255, 52, 101, 1);
    font-weight: bolder;
}

.groups-product-original-unit {
    font-size: 18rpx;
    color: rgba(145, 152, 159, 1);
    font-weight: bolder;

    margin-bottom: 4rpx;
    text-decoration: line-through;
}

.groups-product-original-price {
    font-size: 22rpx;
    color: rgba(145, 152, 159, 1);
    font-weight: bolder;
    text-decoration: line-through;
}

.groups-product-bottom-row {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-content: center;

    position: absolute;
    bottom: 0;
    right: 0;
    left: 0;
}

.groups-product-group {
    padding-left: 18rpx;
    padding-right: 18rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    border-radius: 30rpx;

    font-size: 28rpx;
    color: rgba(241, 241, 241, 1);
    text-align: center;

    background-color: rgba(23, 96, 255, 1);
}

.groups-product-person-content {
    /* display: flex;
    flex-direction: row; */

    width: 55%;
    overflow: scroll;
    white-space: nowrap;
    align-self: center;
}

.groups-product-person {
    width: 64rpx;
    height: 64rpx;

    border-radius: 32rpx;
}

.groups-product-person-count {
    font-size: 22rpx;
    color: rgba(145, 152, 159, 1);

    margin-left: 8rpx;
}