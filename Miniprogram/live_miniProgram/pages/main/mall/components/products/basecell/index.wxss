 .profile-product-title {
     font-size: 40rpx;
     color: rgba(255, 255, 255, 1);
     font-weight: bolder;
     padding-left: 30rpx;
     padding-right: 30rpx;

     margin-bottom: 32rpx;
 }

 .profile-product-cell-content {
     display: flex;
     flex-direction: row;
     flex-wrap: wrap;

     padding-right: 30rpx;
 }

 .profile-product-cell {
     width: 330rpx;
     margin-bottom: 30rpx;

     margin-left: 30rpx;

     background-color: rgba(255, 255, 255, 1);
     border-radius: 12rpx;

     display: flex;
     flex-direction: column;
 }

 .profile-product-image {
     width: 330rpx;
     height: 330rpx;

     border-top-left-radius: 12rpx;
     border-top-right-radius: 12rpx;
 }

 .profile-product-column {
     padding-left: 16rpx;
     padding-top: 28rpx;
     padding-right: 16rpx;
     padding-bottom: 12rpx;

     border-bottom-left-radius: 12rpx;
     border-bottom-right-radius: 12rpx;

     display: flex;
     flex-direction: column;
 }

 .profile-product-name {
     font-size: 28rpx;
     color: rgba(53, 53, 53, 1);
 }

 .profile-product-unit {
     font-size: 18rpx;
     color: rgba(255, 52, 101, 1);
     font-weight: bolder;

     margin-bottom: 4rpx;
 }

 .profile-product-price {
     font-size: 32rpx;
     color: rgba(255, 52, 101, 1);
     font-weight: bolder;
 }

 .profile-header-base-row {
     display: flex;
     flex-direction: row;
 }