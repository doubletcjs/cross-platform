.groups-content {
    margin-top: 40rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;

    background-color: rgba(28, 35, 52, 1);
    border-radius: 12rpx;

    padding-left: 20rpx;
    padding-right: 20rpx;
    padding-top: 32rpx;

    display: flex;
    flex-direction: column;
}

.groups-title-row {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;

    margin-bottom: 32rpx;
}

.groups-title {
    font-size: 40rpx;
    color: rgba(255, 255, 255, 1);
    font-weight: bolder;
}

.groups-more {
    font-size: 28rpx;
    color: rgba(255, 255, 255, 1);
}