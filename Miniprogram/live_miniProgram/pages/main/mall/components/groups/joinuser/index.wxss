.i-modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    transition: all 0.2s ease-in-out;
    opacity: 0;
    visibility: hidden;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;

    background-color: rgba(0, 0, 0, 0.4);
}

.i-modal-mask-show {
    opacity: 1;
    visibility: visible;
}

.joinuser-content {
    width: 100%;

    background-color: rgba(21, 25, 40, 1);
    border-top-left-radius: 40rpx;
    border-top-right-radius: 40rpx;

    position: relative;
}

.joinuser-close {
    width: 48rpx;
    height: 48rpx;

    position: absolute;
    top: 46rpx;
    right: 30rpx;
}

.joinuser-title {
    margin-left: 30rpx;
    padding-top: 70rpx;
    padding-bottom: 20rpx;

    font-size: 28rpx;
    color: rgba(241, 241, 241, 1);
    border-bottom: solid 2rpx rgba(255, 255, 255, 0.1);
}

.joinuser-list-content {
    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-bottom: 30rpx;

    height: 700rpx;
    overflow: scroll;
}

.joinuser-list-cell {
    margin-top: 32rpx;
    width: 100%;
    height: 90rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-content: center;
}

.joinuser-cell-base-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
}

.joinuser-cell-head {
    width: 90rpx;
    height: 90rpx;

    border-radius: 45rpx;
}

.joinuser-cell-name {
    font-size: 28rpx;
    color: rgba(241, 241, 241, 1);

    margin-left: 30rpx;
}

.joinuser-cell-right-row {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    align-content: center;
}

.joinuser-cell-button {
    height: 60rpx;
    width: 120rpx;

    border-radius: 30rpx;
    background-color: rgba(23, 96, 255, 1);

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;

    font-size: 28rpx;
    color: rgba(241, 241, 241, 1);
}

.joinuser-cell-time-text {
    font-size: 28rpx;
    color: rgba(241, 241, 241, 1);

    margin-right: 16rpx;
}

.joinuser-cell-time {
    font-size: 28rpx;
    color: rgba(255, 52, 101, 1);

    width: 116rpx;
    margin-right: 32rpx;
}