.items-content {
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 40rpx;

    padding-left: 26rpx;
    padding-top: 40rpx;
    padding-right: 26rpx;
    padding-bottom: 26rpx;

    background-color: rgba(28, 35, 52, 1);
    border-radius: 12rpx;

    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.items-cover {
    width: 25%;
    margin-bottom: 14rpx;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    align-content: center;

    position: relative;
}

.items-icon {
    width: 100rpx;
    height: 100rpx;
}

.items-name {
    font-size: 28rpx;
    color: rgba(255, 255, 255, 1);

    margin-top: 8rpx;
}

.items-dot {
    font-size: 22rpx;
    border-radius: 20rpx;
    background-color: rgba(255, 52, 101, 1);
    color: rgba(255, 255, 255, 1);

    padding-left: 14rpx;
    padding-right: 14rpx;
    padding-top: 4rpx;
    padding-bottom: 4rpx;

    position: absolute;
    right: 11rpx;
    top: -11rpx;
}