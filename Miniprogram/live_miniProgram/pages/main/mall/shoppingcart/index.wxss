.shoppingcart-title {
    width: 100%;
    padding-left: 30rpx;
    padding-right: 30rpx;

    border-bottom: solid 20rpx rgba(0, 0, 0, 0.5);

    display: flex;
    flex-direction: row;
    justify-content: flex-end;

    background-color: rgba(21, 25, 40, 1);
    position: fixed;
    top: 0;
    z-index: 1;
}

.shoppingcart-title-button {
    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);

    padding-top: 34rpx;
    padding-bottom: 18rpx;
}

.shoppingcart-list-content {
    position: absolute;
    top: 116rpx;
    left: 0;
    right: 0;
    z-index: 0;
}

.shoppingcart-cell {
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 32rpx;

    padding-left: 40rpx;
    padding-top: 40rpx;
    padding-right: 20rpx;
    padding-bottom: 102rpx;

    background-color: rgba(28, 35, 52, 1);
    border-radius: 12rpx;

    display: flex;
    flex-direction: row;
    position: relative;
}

.shoppingcart-cell-select {
    width: 48rpx;
    height: 48rpx;

    margin-top: 116rpx;
}

.shoppingcart-cell-cover {
    width: 210rpx;
    height: 210rpx;

    border-radius: 12rpx;
    margin-left: 32rpx;
}

.shoppingcart-cell-title {
    font-size: 28rpx;
    color: rgba(241, 241, 241, 1);

    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    white-space: normal !important;
    overflow: hidden;
    text-overflow: ellipsis;

    margin-top: 8rpx;
}

.shoppingcart-cell-function {
    margin-top: 22rpx;

    position: absolute;
    right: 20rpx;
    bottom: 16rpx;

    display: flex;
    flex-direction: row;
}

.shoppingcart-cell-function-count {
    height: 64rpx;

    padding-left: 32rpx;
    padding-right: 32rpx;
    margin-left: 8rpx;
    margin-right: 8rpx;

    background-color: rgba(21, 25, 40, 1);
    border-radius: 6rpx;

    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;
}

.shoppingcart-cell-function-button {
    width: 64rpx;
    height: 64rpx;
}

.shoppingcart-base-column {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    width: 300rpx;

    margin-left: 30rpx;
    position: relative;
}

.shoppingcart-spec-content {
    height: 48rpx;
    border-radius: 4rpx;
    background-color: rgba(21, 25, 40, 1);
    margin-top: 16rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-content: center;
}

.shoppingcart-sepc-text {
    width: 76%;

    font-size: 28rpx;
    color: rgba(86, 93, 109, 1);

    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    white-space: normal !important;
    overflow: hidden;
    text-overflow: ellipsis;

    margin-left: 8rpx;
}

.shoppingcart-sepc-arrow {
    width: 20rpx;
    height: 10rpx;

    margin-right: 22rpx;
}

.shoppingcart-base-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
}

.shoppingcart-bottom-content {
    height: 120rpx;
    background-color: rgba(21, 25, 40, 1);

    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-content: center;

    padding-left: 30rpx;
    padding-right: 30rpx;
}

.shoppingcart-bottom-all {
    width: 48rpx;
    height: 48rpx;
}

.shoppingcart-bottom-text {
    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);
}

.shoppingcart-bottom-settlement {
    width: 210rpx;
    height: 80rpx;

    margin-left: 30rpx;
}

.shoppingcart-bottom-price-row {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    align-content: flex-end;
}

.shoppingcart-bottom-price {
    font-size: 32rpx;
    color: rgba(255, 52, 101, 1);
    font-weight: bold;
}

.shoppingcart-bottom-unit {
    font-size: 18rpx;
    color: rgba(255, 52, 101, 1);

    margin-bottom: 4rpx;
}


.shoppingcart-bottom-delete {
    width: 152rpx;
    height: 60rpx;

    border-radius: 30rpx;
    border: solid 2rpx rgba(241, 241, 241, 1);

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;

    font-size: 28rpx;
    color: rgba(241, 241, 241, 1);
}