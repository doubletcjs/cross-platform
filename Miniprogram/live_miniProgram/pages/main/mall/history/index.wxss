.history {
    width: 100%;
    height: 100%;

    position: relative;
}

.history-function-content {
    width: 100%;
    height: 100rpx;

    padding-right: 30rpx;

    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    align-content: center;

    background-color: rgba(21, 25, 40, 1);
    position: fixed;
    top: 0;
}

.history-function-text {
    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);
}

.history-cell-content {
    width: 100%;
    margin-top: 100rpx;
}

.history-date-section {
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-bottom: 40rpx;

    padding-left: 22rpx;
    padding-right: 20rpx;
    padding-top: 32rpx;
    padding-bottom: 2rpx;

    background-color: rgba(28, 35, 52, 1);
    border-radius: 12rpx;

    display: flex;
    flex-direction: column;
}

.history-date {
    font-size: 40rpx;
    font-weight: bold;
    color: rgba(241, 241, 241, 1);

    margin-bottom: 32rpx;
}

.history-base-cell {
    display: flex;
    flex-direction: row;
    padding-bottom: 40rpx;
}

.history-cell-cover {
    width: 236rpx;
    height: 210rpx;

    border-radius: 12rpx;
    position: relative;
}

.history-cell-column {
    display: flex;
    flex-direction: column;
    justify-content: space-between;

    margin-left: 20rpx;
}

.history-cell-title {
    font-size: 32rpx;
    color: rgba(255, 255, 255, 1);

    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    white-space: normal !important;
    overflow: hidden;
    text-overflow: ellipsis;

    margin-top: 2rpx;
}

.history-cell-row {
    display: flex;
    flex-direction: row;
    justify-content: space-between;

    margin-bottom: 4rpx;
}

.history-cell-cart {
    width: 64rpx;
    height: 64rpx;
}

.history-cell-price-row {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    align-content: flex-end;
}

.history-cell-unit {
    font-size: 18rpx;
    color: rgba(255, 52, 101, 1);

    margin-bottom: 4rpx;
    margin-right: 4rpx;
}

.history-cell-price {
    font-size: 32rpx;
    font-weight: bold;
    color: rgba(255, 52, 101, 1);
}

.history-cell-noinventory {
    width: 236rpx;
    height: 60rpx;

    font-size: 28rpx;
    color: rgba(241, 241, 241, 1);
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;

    position: absolute;
    bottom: 0;

    background-color: rgba(0, 0, 0, 0.5);
}

.history-cell-edit-content {
    width: 98rpx;
    height: 210rpx;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    align-content: flex-start;
}

.history-cell-edit-icon {
    width: 44rpx;
    height: 44rpx;
}

.history-cell-select-function-content {
    background-color: rgba(28, 35, 52, 1);
    width: 100%;
    height: 90rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-content: center;

    position: fixed;
    bottom: 0;
}

.history-cell-select-all-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
}

.history-cell-select-all-icon {
    width: 44rpx;
    height: 44rpx;

    margin-left: 52rpx;
}

.history-cell-select-all-text {
    margin-left: 24rpx;
    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);
}

.history-cell-delete {
    margin-right: 30rpx;

    padding-left: 30rpx;
    padding-top: 10rpx;
    padding-right: 30rpx;
    padding-bottom: 10rpx;

    background-color: rgba(255, 52, 101, 1);
    border-radius: 8rpx;

    font-size: 28rpx;
    color: rgba(241, 241, 241, 1);
}