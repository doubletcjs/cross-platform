.detail-content {
    width: 100%;
    position: absolute;
    top: 0;
    padding-bottom: 120rpx;
}

.detail-function-bottom {
    padding-left: 34rpx;
    padding-right: 30rpx;
    height: 120rpx;
    background-color: rgba(21, 25, 40, 1);

    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-content: center;
}

.detail-base-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
}

.detail-base-column {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    align-content: center;
}

.detail-icon {
    width: 48rpx;
    height: 48rpx;
}

.detail-text {
    font-size: 20rpx;
    color: rgba(145, 152, 159, 1);

    margin-top: 10rpx;
}

.detail-button {
    width: 210rpx;
    height: 94rpx;

    position: relative;
}

.detail-button-text {
    font-size: 32rpx;
    color: rgba(241, 241, 241, 1);
    font-weight: 700;
    width: 100%;
    height: 100%;

    position: absolute;
    top: 0;

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;
}