.mall-content {
    display: flex;
    flex-direction: column;

    position: fixed;
    top: 140rpx;
    left: 0;
    right: 0;
}

.search-bar-content {
    padding-left: 30rpx;
    padding-top: 36rpx;
    padding-right: 20rpx;
    padding-bottom: 40rpx;

    position: fixed;
    top: 0;
    left: 0;
    right: 0;

    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: rgba(21, 25, 40, 1);
}

.search-bar-image {
    width: 64rpx;
    height: 64rpx;
}

.inputValue {
    width: 522rpx;
    height: 64rpx;
    display: flex;
    align-items: center;
    border-radius: 64rpx;
    /* background:rgba(0,0,0,0.1); */
    background: rgba(45, 48, 62, 1);
    -webkit-border-radius: 64rpx;
    -moz-border-radius: 64rpx;
    -ms-border-radius: 64rpx;
    -o-border-radius: 64rpx;
    position: relative;
    color: #565D6D;
    padding-left: 64rpx;
    line-height: 64rpx;
}

.inputValue .imgbox {
    position: absolute;
    left: 15rpx;
    top: 11rpx;
    width: 44rpx;
    height: 44rpx;
    border-radius: 44rpx;
    -webkit-border-radius: 44rpx;
    -moz-border-radius: 44rpx;
    -ms-border-radius: 44rpx;
    -o-border-radius: 44rpx;
    overflow: hidden;
    z-index: 2;
}