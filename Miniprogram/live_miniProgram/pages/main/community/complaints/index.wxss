.bottom-mask {
    width: 100%;
    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-bottom: 66rpx !important;

    position: fixed;
    bottom: 0;

    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
}

.bottom-commit {
    width: 100%;
    height: 94rpx;

    background-color: rgba(23, 96, 255, 1);
    border-radius: 10rpx;

    font-size: 36rpx;
    color: rgba(241, 241, 241, 1);
    text-align: center;

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;
}

.content-mask {
    width: 100%;
    margin-bottom: 94rpx;
}

.complaints-base-text {
    font-size: 28rpx;
    color: rgba(86, 93, 118, 1);

    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 40rpx;
}

.complaints-items-content {
    padding-left: 15rpx;
    padding-right: 15rpx;
    margin-top: 32rpx;

    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.complaints-item-cover {
    width: 33.3333333333333333%;
    margin-bottom: 32rpx;
}

.complaints-item {
    height: 70rpx;
    font-size: 28rpx;
    color: rgba(241, 241, 241, 1);
    margin-left: 15rpx;
    margin-right: 15rpx;

    background-color: rgba(28, 35, 52, 1);
    border-radius: 8rpx;

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;
}