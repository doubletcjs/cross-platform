/* addPublish */
.addPublish{
    position: fixed;
    right: 30rpx;
    bottom: 30rpx;
    width: 130rpx;
    height: 130rpx;
    background-color: #1760FF;
    border-radius: 130rpx;
    -webkit-border-radius: 130rpx;
    -moz-border-radius: 130rpx;
    -ms-border-radius: 130rpx;
    -o-border-radius: 130rpx;
}
.addPublish .line{
    width: 12rpx;
    height: 60rpx;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    background-color: #fff;
    transform: rotateZ(50deg);
    -webkit-transform: rotateZ(50deg);
    -moz-transform: rotateZ(50deg);
    -ms-transform: rotateZ(50deg);
    -o-transform: rotateZ(50deg);
}
.addPublish .line2{
    position: absolute;
    top: 0;
    left: 0;
    width: 12rpx;
    height: 3rpx;
    background-color: #1760FF;
}
.addPublish .line::before{
    content: " ";
    display: block;
    position: absolute;
    top: -6rpx;
    left: 0;
    width: 100%;
    height: 12rpx;
    background-color: #fff;
    border-radius: 12rpx;
    -webkit-border-radius: 12rpx;
    -moz-border-radius: 12rpx;
    -ms-border-radius: 12rpx;
    -o-border-radius: 12rpx;
}
.addPublish .line::after{
    content: " ";
    display: block;
    position: absolute;
    bottom: -22rpx;
    left: 0rpx;
    width: 0rpx;
    height: 0rpx;
    background-color: transparent;
    border-top: 18rpx solid #fff;
    border-right:  7rpx  solid transparent;
    border-bottom: 6rpx  solid transparent;
    border-left:  6rpx  solid transparent;
   
}