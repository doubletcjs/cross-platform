
page{
    
}
.newsDetail{
    font-size: 28rpx;
    line-height:40rpx;
    color:rgba(241,241,241,1);
}
.new{
    padding-top: 20rpx;
    background-color: #151928;
    padding: 30rpx 30rpx 40rpx 30rpx;
    margin-bottom: 20rpx;
}
.new .time{
    color: #91989F;
    margin-bottom: 10rpx;
}

.newItemCall{
    
}
.title{
    padding: 28rpx 30rpx 22rpx 30rpx;
    border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}
.newItemCall .newItem{
    display: flex;
    padding: 30rpx;
}
.newItem .image{
    width: 72rpx;
    height: 72rpx;
    overflow: hidden;
    border-radius: 72rpx;
    -webkit-border-radius: 72rpx;
    -moz-border-radius: 72rpx;
    -ms-border-radius: 72rpx;
    -o-border-radius: 72rpx;
}
.newItem .nicname{
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid rgba(255,255,255,0.1);
    margin-left: 30rpx;
    flex: 1;
    position: relative;
}
.nicname .nicnametime{
    color: #91989F;
    font-size: 22rpx;
    margin-top: 14rpx;
}
.nicname .time{
    color: #565D76;
}
.other{
    padding: 20rpx 0;
    border-top: 1rpx solid rgba(255,255,255,0.1);
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    color: #91989F;
}
.other image{
    vertical-align: middle;
    position: relative;
    top: -1rpx;
}
.other .otherCur{
    color: #1760FF;
    margin-left: 30rpx;
}
.option{
    position: absolute;
    right: 0;
    bottom: 10rpx;
    width: 240rpx;
    height: 72rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
.option .item{
    width: 44rpx;
    height: 44rpx;
    margin-left: 60rpx;
}


