page{
    height: 100%;
}
.wrap{
    position: fixed;
    height: 100%;
    width: 100%;
    left: 0;
    top: 0;
    z-index: 10000;
}
.input{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 110rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    justify-content: space-between;
   opacity: 0;
}
.show{
    opacity: 1;
}
.input input{
    font-size: 28rpx;
}
.send{
    width: 64rpx;
    height: 64rpx;
}