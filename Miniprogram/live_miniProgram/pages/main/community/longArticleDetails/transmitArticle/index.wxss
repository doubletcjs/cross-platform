/* pages/main/community/longArticleDetails/transmitArticle/index.wxss */
.transmit_page_wrapper {
  color: #151928;

  display: flex;
  flex-direction: column;

  color: #f1f1f1;
}

.transmint_page_button {
  margin-right: 30rpx;
  margin-top: 28rpx;
  width: 144rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  background-color: #1760ff;
  text-align: center;
  border-radius: 8rpx;
  -webkit-border-radius: 8rpx;
  -moz-border-radius: 8rpx;
  -ms-border-radius: 8rpx;
  -o-border-radius: 8rpx;

  align-self: flex-end;
}

.transmint_line {
  margin-top: 16rpx;
  border-top: #ffffff1a solid 2rpx;
}

.transmint_edit_wrapper {
  /* margin-left: 30rpx; */
  /* margin-right: 30rpx; */
}

.t_edit_input {
  width: 100%;

  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  height: 256rpx;
  color: white;
  font-size: 32rpx;
  background-color: #151928;
  box-sizing: border-box;
}

.t_edit_placeholder {
  width: 100%;

  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  height: 256rpx;
  color: #565d6d;
  font-size: 32rpx;
  background-color: #151928;
  box-sizing: border-box;
}

.t_content_wrapper {
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;

  height: 224rpx;
  background-color: #1c2334;
  border-radius: 8rpx;
  -webkit-border-radius: 8rpx;
  -moz-border-radius: 8rpx;
  -ms-border-radius: 8rpx;
  -o-border-radius: 8rpx;

  display: flex;
  flex-direction: row;
  justify-content: space-around;
  /* align-items: center;
  align-content: center; */
}

.t_content_left_wrapper {
  align-self: center;
  margin-left: 20rpx;
}

.t_content_image {
  height: 160rpx;
  width: 160rpx;
}

.t_content_right_wrapper {
  margin-left: 20rpx;
  margin-right: 20rpx;
  align-self: center;

}

.t_content_right_title {
  font-size: 28rpx;

  /* 控制段落只显示一定行数，且最后一行结尾处超出部分以省略号显示 */
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.t_content_right_content {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #91989f;

  /* 控制段落只显示一定行数，且最后一行结尾处超出部分以省略号显示 */
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
