}

.home_live_history_item_time {
  color: #565D6D;
  font-size: 22rpx;
  margin-top: 16rpx;
}

.home_live_start {
  height: 178rpx;
  width: 178rpx;
  margin: 10rpx;
  position: fixed;
  right: 16rpx;
  bottom: 56rpx;
  border-radius:50%;
}