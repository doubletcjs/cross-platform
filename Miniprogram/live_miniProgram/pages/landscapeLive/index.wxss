}

.attention {
  font-size: 4.26vmin;
  margin-left: 20px;
  padding: 5px 15px;
  background-color: #1760FF;
  border-radius: 8rpx;
  -webkit-border-radius: 8rpx;
  -moz-border-radius: 8rpx;
  -ms-border-radius: 8rpx;
  -o-border-radius: 8rpx;
}

.attentioned {
  background: rgba(145, 152, 159, 0.1);
  color: rgba(86, 93, 109, 1);
}

.inputBox {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 15.4vmin;
  width: 100%;
  display: flex;
  align-items: center;

}

/* 1 vmin = 1rpx *100 / 750 */
.inputBox .input {
  width: 66.93vmin;
  height: 12vmin;
  line-height: 12vmin;
  background: #fff;
  opacity: 0.2;
  border-radius: 14.4vmin;
  padding-left: 30px;
  -webkit-border-radius: 14.4vmin;
  -moz-border-radius: 14.4vmin;
  -ms-border-radius: 14.4vmin;
  -o-border-radius: 14.4vmin;
  color: rgba(145, 152, 159, 1);
}

.stop {
  width: 8.53vmin;
  margin-left: 15px;
  margin-right: 67.33vmin;
}

.stopgift {
  width: 8.53vmin;
  margin-right: 10px;
}

.stopcontent {
  width: 8.53vmin;
  margin-right: 12px;
}

/* 右側操作導航 */
.rightNav {
  position: fixed;
  right: 5px;
  bottom: 10px;
  height: auto;
  z-index: 10;
}

.shooping {
  width: 12vmin;
  margin-bottom: 20px;
  position: relative;
  text-align: center;
}

.give {
  height: 16vmin;
  position: relative;
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
}

.giveText {
  position: absolute;
  top: 11.5vmin;
  min-width: 100%;
  text-align: center;
  display: inline-block;
  color: rgb(255, 58, 105);
  font-size: 11px;
  border-radius: 40rpx;
  padding: 1rpx 10rpx;
  background-color: #fff;
  -webkit-border-radius: 40rpx;
  -moz-border-radius: 40rpx;
  -ms-border-radius: 40rpx;
  -o-border-radius: 40rpx;
}

.sendgift {
  width: 12vmin;
}

/* 点赞动画 */
.giveNnumberAnimation {
  position: fixed;
  width: 8vmin;
  height: 8vmin;
  border-radius: 60rpx;
  right: 17.33vmin;
  bottom: 1.33vmin;
  font-size: 16px;
  font-weight: 800;
  text-align: center;
  line-height: 8vmin;
  color: #fff;
  background-color: red;
  border-radius: 8vmin;
  -webkit-border-radius: 8vmin;
  -moz-border-radius: 8vmin;
  -ms-border-radius: 8vmin;
  -o-border-radius: 8vmin;
  opacity: 0;
  transition: all .4s;
  -webkit-transition: all .4s;
  -moz-transition: all .4s;
  -ms-transition: all .4s;
  -o-transition: all .4s;
}

.giveNnumberAnimation.animate {
  animation: give 1.2s;
  -webkit-animation: give 1.2s;
}

@keyframes give {
  0% {
    bottom: 40rpx;
    opacity: 0;
    width: 10rpx;
    height: 10rpx;
  }

  25% {
    bottom: 110rpx;
    opacity: 0.6;
  }

  65% {
    bottom: 260rpx;
    opacity: 1;
  }

  85% {
    bottom: 260rpx;
    opacity: 0.5;
  }

  100% {
    bottom: 360rpx;
    opacity: 0;
  }
}

