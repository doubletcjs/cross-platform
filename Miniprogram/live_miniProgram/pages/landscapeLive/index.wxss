/* hideAnimation */
.hideAnimation {
  animation: hide 2s;
  -webkit-animation: hide 2s;
}

@keyframes hide {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
  }
}

@-webkit-keyframes hide {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
  }
}

