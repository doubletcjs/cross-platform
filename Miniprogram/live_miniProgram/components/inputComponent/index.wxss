.i-modal-mask {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height:100%;
    /* background-color: red; */
    z-index: 10000;
    display: block;
}

.inputbox{
    width: 100%;
    height: 14.666vmin;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    opacity: 0;
}
.show{
    opacity: 1;
}
.inputbox input{
    width: 80vmin;
    height: 8.53vmin;
    margin-left: 4.266vmin;
    color: #000;
}
.send{
    width: 8.53vmin;
    margin-right: 4.266vmin;
}
.send image{
    height: auto;
}