image{
    border: 0;
    height: auto;
}
.item{
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    background-color: #151928;
    padding: 30rpx 30rpx;
    position: relative;
}
.author{
    height: 72rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.attention{
    background-color: #1760FF;
    padding: 10rpx 25rpx;
    border-radius: 8rpx;
    -webkit-border-radius: 8rpx;
    -moz-border-radius: 8rpx;
    -ms-border-radius: 8rpx;
    -o-border-radius: 8rpx;
    color: #fff;
}
.transmitText{
    color: #1760FF;
}
/* 阅读量按钮 */
.isShowAttention{
    width:160rpx;
    height:72rpx;
    background:rgba(28,35,52,1);
    opacity:1;
    border-radius:8px;
    -webkit-border-radius:8px;
    -moz-border-radius:8px;
    -ms-border-radius:8px;
    -o-border-radius:8px;
    text-align: center;
    color: #91989F;
    font-size: 22rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.isShowAttention .number{
    color:rgba(145,152,159,1);
}
.isShowAttention .numbertext{
    color:rgba(86,93,118,1);
}
/* git 动画 */
.animateGif{
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 200rpx;
    height: 200rpx;
    z-index: 2;
    transition: all 0.3s;
    -webkit-transition: all 0.3s;
    -moz-transition: all 0.3s;
    -ms-transition: all 0.3s;
    -o-transition: all 0.3s;
}
.imgGif{
    display: none;
}

.iconshow{
    display: block;
}

.animateGif.gifShow{
    display: block;
}
.isTransmit{
    background-color: rgba(145,152,159,0.1);
    width: 750rpx;
    position: relative;
    left: -30rpx;
    padding: 10rpx 30rpx 20rpx 30rpx;
    margin-top: 20rpx;
}
.comment{
    font-size: 32rpx;
    line-height: 52rpx;
    margin-top: 20rpx;
    color: rgba(241,241,241,1);
}
.articleTiltle{
    font-size: 32rpx;
    line-height: 44rpx;
    margin-top: 32rpx;
    color:rgba(241,241,241,1);
}
.articleTiltle.cur{
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
}
.articleContents{
    color: #91989F;
    line-height: 40rpx;
    font-size: 28rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-top: 20rpx;
}
.articleContentsCur{
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    line-clamp: 1;
    -webkit-box-orient: vertical;
}
.attention.cur{
    background:rgba(145,152,159,0.1);
    color: #565D6D;
}
.authorphoto{
    display: flex;
    align-items: center;
}
.authorphoto .img{
    width: 72rpx;
    height: 72rpx;
    overflow: hidden;
    border-radius: 72rpx;
    -webkit-border-radius: 72rpx;
    -moz-border-radius: 72rpx;
    -ms-border-radius: 72rpx;
    -o-border-radius: 72rpx;
}
.authorname{
    padding-left: 30rpx;
    font-size: 32rpx;
    color:rgba(241,241,241,1);
}
.authorname .time{
    font-size: 22rpx;
    color: #91989F;
}
.imgs{
    display: flex;
    margin-top: 32rpx;
    flex-wrap: wrap;
}
.imgs .imgBox{
    width: 210rpx;
    border-radius: 12rpx;
    -webkit-border-radius: 12rpx;
    -moz-border-radius: 12rpx;
    -ms-border-radius: 12rpx;
    -o-border-radius: 12rpx;
    margin-bottom: 20rpx;
    margin-right: 30rpx;
}
.imgs.cur .imgBox{
    width: 450rpx;
    border-radius: 12rpx;
    -webkit-border-radius: 12rpx;
    -moz-border-radius: 12rpx;
    -ms-border-radius: 12rpx;
    -o-border-radius: 12rpx;
    margin-bottom: 20rpx;
    margin-right: 30rpx;
}

.operation{
    display: flex;
    align-items: center;
    position: relative;
    margin-top: 36rpx;
    color: #91989F;
}
.operation-item{
   display: flex;
   align-items: center;
}
.last{
   position: absolute;
   right: 0;
   top: 0;
}
.operation-item image,.operation-item text{
    vertical-align: middle;
}
.operation-item-img{
    width: 50rpx;
    height: 50rpx;
    /* border: 1rpx dashed #fff; */
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 12rpx;
}