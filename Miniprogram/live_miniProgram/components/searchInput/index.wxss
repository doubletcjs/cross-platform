.search {
    height: 64rpx;
    border-radius: 64rpx;
    -webkit-border-radius: 64rpx;
    -moz-border-radius: 64rpx;
    -ms-border-radius: 64rpx;
    -o-border-radius: 64rpx;
    overflow: hidden;
    position: relative;
}

.search input {
    width: 100%;
    height: 100%;
    padding-left: 64rpx;
    background: rgba(255, 255, 255, 0.1);
    opacity: 0.27;
    font-size: 28rpx;
    color: white;
}

.search input.focus {
    opacity: 1;
}

.icon_search {
    position: absolute;
    width: 44rpx;
    height: 44rpx;
    left: 15rpx;
    top: 10rpx;
    z-index: 10;
}

.input-placeholder {
    color: #565D6D;
}