.i-modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    transition: all 0.2s ease-in-out;
    opacity: 0;
    visibility: hidden;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.i-modal-mask-show {
    opacity: 1;
    visibility: visible;
}

.contentView {
    width: 100%;
    background: white;

    border-top-left-radius: calc(24vmin / 7.5);
    border-top-right-radius: calc(24vmin / 7.5);

    position: fixed;
    bottom: 0;
}

.contentTitleSuper {
    width: 100%;
    background: white;

    padding-top: calc(40vmin / 7.5);
    padding-bottom: calc(44vmin / 7.5);
    padding-left: calc(44vmin / 7.5);
    padding-right: calc(44vmin / 7.5);

    border-top-left-radius: calc(24vmin / 7.5);
    border-top-right-radius: calc(24vmin / 7.5);
}

.contentTitle {
    font-size: calc(32vmin / 7.5);

    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.contentCancel {
    width: 100%;
    height: calc(128vmin / 7.5);

    font-size: calc(34vmin / 7.5);
    color: rgba(136, 136, 136, 1);

    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;

    border-top: solid calc(16vmin / 7.5) rgba(242, 242, 242, 1);
}

.contentItem {
    width: 100%;
    height: calc(112vmin / 7.5);

    font-size: calc(32vmin / 7.5);
    color: rgba(53, 53, 53, 1);

    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;

    border-top: solid calc(1vmin / 7.5) rgba(0, 0, 0, 0.1);
}