.wrap{
    font-size: 36rpx;
    height: 100%;
    color:rgba(241,241,241,1);
}
.tab{
    font-size: 32rpx;
    width: 590rpx;
    margin: 0 auto;
    display: flex;
    border: 2rpx solid #1760FF;
    border-radius: 8rpx;
    margin-top: 40rpx;
    -webkit-border-radius: 8rpx;
    -moz-border-radius: 8rpx;
    -ms-border-radius: 8rpx;
    -o-border-radius: 8rpx;
}
.tab .tab-item {
    width: 50%;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    color: #1760FF;
}
.tab .tab-item.active{
    background-color: #1760FF;
    color: #fff;
}
.tabcontent{
   width: 690rpx;
   margin: 0 auto;
}
.content-item{
    display: flex;
    font-size: 28rpx;
    padding: 26rpx 0;
    border-bottom: 2rpx solid rgba(255,255,255,0.050980392156862744);
    align-items: center;
}

.content-item .authorImg{
    width: 120rpx;
    height: 120rpx;
    margin: 0 39rpx 0 38rpx;
    overflow: hidden;
    border-radius: 120rpx;
    -webkit-border-radius: 120rpx;
    -moz-border-radius: 120rpx;
    -ms-border-radius: 120rpx;
    -o-border-radius: 120rpx;
}
.content-item .ranking{
    width: 62rpx;
    height: 62rpx;
    text-align: center;
    line-height: 62rpx;
    font-size: 36rpx;
}
.content-item .authorMsg{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.authorMsg .authorMsg-top{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.authorMsg .authorMsg-top .nicname{
    font-size: 36rpx;
}
.authorMsg .authorMsg-bottom{
    font-size: 28rpx;
    color: #91989F;
}
.img-box .img{
    margin-left: 16rpx;
}
