.i-modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    transition: all 0.2s ease-in-out;
    opacity: 0;
    visibility: hidden;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.i-modal-mask-show {
    opacity: 1;
    visibility: visible;
}

.share-content {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;

    border-top-left-radius: calc(24vmin / 7.5);
    border-top-right-radius: calc(24vmin / 7.5);
    background-color: rgba(241, 241, 241, 1);
}

.share-cancel {
    width: 100%;
    height: calc(94vmin / 7.5);
    background-color: rgba(255, 255, 255, 1);

    font-size: calc(32vmin / 7.5);
    color: rgba(136, 136, 136, 1);

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;
}

.share-title {
    width: 100%;
    height: calc(110vmin / 7.5);
    padding-left: calc(30vmin / 7.5);

    font-size: calc(32vmin / 7.5);
    color: rgba(53, 53, 53, 1);

    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
}

.share-swiper-content {
    width: 100%;
    height: calc(216vmin / 7.5);
}

.share-item-content {
    padding-left: calc(30vmin / 7.5);

    display: flex;
    flex-direction: row;
}

.share-item-cover {
    display: flex;
    flex-direction: column;
    align-items: center;
    align-content: center;
}

.share-item-icon {
    height: calc(114vmin / 7.5);
    border-radius: calc(57vmin / 7.5);
    padding: 0;
}

.share-item-name {
    margin-top: calc(12vmin / 7.5);
    font-size: calc(22vmin / 7.5);
    color: rgba(145, 152, 159, 1);
    text-align: center;

    width: calc(88vmin / 7.5);
    height: calc(64vmin / 7.5);

    /* white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis; */

    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    white-space: normal !important;
    overflow: hidden;
    text-overflow: ellipsis;
}