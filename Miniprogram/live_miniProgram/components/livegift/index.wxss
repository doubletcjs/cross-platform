.i-modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    transition: all 0.2s ease-in-out;
    opacity: 0;
    visibility: hidden;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.i-modal-mask-show {
    opacity: 1;
    visibility: visible;
}

.gift-content {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;

    background-color: rgba(28, 35, 52, 1);
    border-top-left-radius: calc(24vmin / 7.5);
    border-top-right-radius: calc(24vmin / 7.5);
}

.gift-title {
    width: 100%;
    padding-left: calc(30vmin / 7.5);

    font-size: calc(32vmin / 7.5);
    color: rgba(241, 241, 241, 1);

    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;

    border-bottom: solid calc(1vmin / 7.5) rgba(255, 255, 255, 0.05);
}

.gift-function-bottom {
    height: calc(90vmin / 7.5);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-content: center;

    padding-left: calc(30vmin / 7.5);
    padding-right: calc(30vmin / 7.5);
}

.gift-amount-content {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    align-content: center;
}

.gift-amount {
    font-size: calc(36vmin / 7.5);
    color: rgba(241, 241, 241, 1);
}

.gift-recharge {
    margin-left: calc(24vmin / 7.5);
    font-size: calc(28vmin / 7.5);
    color: rgba(0, 234, 181, 1);
}

.gift-recharge-arrow {
    margin-left: calc(12vmin / 7.5);
    width: calc(14.22vmin / 7.5);
    height: calc(26.82vmin / 7.5);
}

.gift-count-content {
    height: calc(60vmin / 7.5);

    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    justify-content: center;

    background-color: rgba(21, 25, 40, 1);
    border-radius: calc(30vmin / 7.5);
}

.gift-count-give {
    width: calc(116vmin / 7.5);
    height: 100%;
    font-size: calc(28vmin / 7.5);
    color: rgba(241, 241, 241, 1);
    background-color: rgba(23, 96, 255, 1);
    border-radius: calc(30vmin / 7.5);

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    justify-content: center;
}

.gift-count-arrow-content {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;

    padding-right: calc(40vmin / 7.5);
    padding-left: calc(36vmin / 7.5);
}

.gift-count-arrow-down {
    width: calc(12.04vmin / 7.5);
    height: calc(6.38vmin / 7.5);
}

.gift-count {
    margin-right: calc(12vmin / 7.5);
    font-size: calc(28vmin / 7.5);
    color: rgba(241, 241, 241, 1);
}

.gift-swiper-content {
    width: 100%;
}

.gift-item-content {
    display: flex;
    flex-direction: row;
}

.gift-item-cover {
    display: flex;
    flex-direction: column;
    align-items: center;
    align-content: center;
    border-radius: calc(8vmin / 7.5);
}

.gift-item-icon {
    width: calc(100vmin / 7.5);
    height: calc(100vmin / 7.5);
    padding: 0;
    margin-top: calc(10vmin / 7.5);
}

.gift-item-name {
    margin-top: calc(12vmin / 7.5);
    font-size: calc(28vmin / 7.5);
    color: rgba(241, 241, 241, 1);
    text-align: center;

    width: calc(100vmin / 7.5);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.gift-item-price {
    font-size: calc(22vmin / 7.5);
    color: rgba(145, 152, 159, 1);
    text-align: center;

    width: calc(100vmin / 7.5);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}