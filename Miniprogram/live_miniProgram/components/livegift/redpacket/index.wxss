.i-modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    transition: all 0.2s ease-in-out;
    opacity: 0;
    visibility: hidden;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.i-modal-mask-show {
    opacity: 1;
    visibility: visible;
}

.redpacket-cancel {
    position: absolute;
    right: calc(30vmin / 7.5);
    top: 0;
    height: calc(104vmin / 7.5);

    font-size: calc(32vmin / 7.5);
    color: rgba(241, 241, 241, 1);

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-left: calc(32vmin / 7.5);
}

.redpacket-content {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;

    background-color: rgba(28, 35, 52, 1);
}

.redpacket-title {
    width: 100%;
    height: calc(104vmin / 7.5);
    padding-left: calc(30vmin / 7.5);

    font-size: calc(32vmin / 7.5);
    color: rgba(241, 241, 241, 1);

    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
}

.redpacket-items-content {
    margin-top: calc(18vmin / 7.5);
    overflow: scroll;
}

.redpacket-cell-content-mask {
    height: calc(100vmin / 7.5);
    margin-left: calc(30vmin / 7.5);
    margin-right: calc(30vmin / 7.5);
    margin-top: calc(18vmin / 7.5);
    margin-bottom: calc(40vmin / 7.5);

    position: relative;
}

.redpacket-cell-content {
    height: 100%;

    border: solid calc(2vmin / 7.5) rgba(255, 52, 101, 1);
    border-radius: calc(8vmin / 7.5);

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-content: center;
}

.redpacket-cell-content-cover {
    height: calc(100vmin / 7.5);
    background-color: rgba(0, 0, 0, 0.5);

    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
}

.redpacket-cell-total {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;

    width: 70%;
    height: 100%;
}

.redpacket-icon {
    width: calc(76vmin / 7.5);
    height: calc(76vmin / 7.5);
    margin-right: calc(16vmin / 7.5);
}

.redpacket-total {
    color: rgba(255, 255, 255, 1);
    font-size: calc(28vmin / 7.5);
    text-align: right;
}

.redpacket-cell-number {
    height: 100%;
    width: calc(208vmin / 7.5);
    background-color: rgba(255, 52, 101, 1);

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    align-content: center;
}

.redpacket-cell-coin {
    color: rgba(255, 255, 255, 1);
    font-size: calc(32vmin / 7.5);
}

.redpacket-cell-people {
    color: rgba(255, 255, 255, 0.49);
    font-size: calc(22vmin / 7.5);
    text-align: left;
}

.redpacket-send-content {
    margin-left: calc(30vmin / 7.5);
    margin-right: calc(30vmin / 7.5);
    margin-top: calc(32vmin / 7.5);
    margin-bottom: calc(32vmin / 7.5);
    height: calc(94vmin / 7.5);
    background-color: rgba(255, 52, 101, 1);
    border-radius: calc(8vmin / 7.5);

    color: rgba(241, 241, 241, 1);
    font-size: calc(36vmin / 7.5);

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;
}