.i-modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    /* background: rgba(0, 0, 0, 0); */
    z-index: 1000;
    transition: all 0.2s ease-in-out;
    opacity: 0;
    visibility: hidden;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.i-modal-mask-show {
    opacity: 1;
    visibility: visible;
}

.date-content {
    width: 100%;
    padding-bottom: 64rpx;
    background-color: rgba(241, 241, 241, 1);

    position: fixed;
    bottom: 0;

    display: flex;
    flex-direction: column;
}

.date-confirm {
    margin-left: 30rpx;
    margin-right: 30rpx;
    height: 94rpx;

    background-color: rgba(23, 96, 255, 1);
    border-radius: 10rpx;
    font-size: 36rpx;
    color: rgba(241, 241, 241, 1);

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;
}

.date-title {
    width: 100%;

    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-top: 22rpx;
    padding-bottom: 20rpx;
    margin-bottom: 32rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-content: center;
}

.date-title-name {
    font-size: 36rpx;
    color: rgba(53, 53, 53, 1);
}

.date-title-close {
    width: 48rpx;
    height: 48rpx;
}

.date-base-text {
    font-size: 28rpx;
    color: rgba(178, 178, 178, 1);

    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-bottom: 20rpx;
}

.date-range-content {
    display: flex;
    flex-direction: row;
    flex-flow: wrap;

    width: 100%;
    padding-bottom: 64rpx;
}

.date-range-cover {
    max-width: 700rpx;
    padding-left: 31rpx;
}

.date-range-item {
    width: 150rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;

    font-size: 28rpx;
    text-align: center;

    border-radius: 6rpx;

    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    white-space: normal !important;
    overflow: hidden;
    text-overflow: ellipsis;
}

.date-range-select {
    width: 330rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    padding-left: 56rpx;
    padding-right: 56rpx;

    font-size: 28rpx;
    color: rgba(136, 136, 136, 1);
    background-color: rgba(145, 152, 159, 0.2);
    text-align: center;

    border-radius: 8rpx;

    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    white-space: normal !important;
    overflow: hidden;
    text-overflow: ellipsis;
}

.picker-view {
    font-size: 28rpx;
    color: rgba(53, 53, 53, 1);
}