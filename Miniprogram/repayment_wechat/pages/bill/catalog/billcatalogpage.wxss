.bill-catalog-list-swapper {
    margin-top: 98rpx;

    background-color: white;
}

.bill-catalog-cell-swapper {
    position: relative;
    height: 120rpx;
}

.bill-catalog-cell {
    width: 100%;
    height: 100%;

    position: absolute;
    top: 0;
    left: 0;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;

    background-color: white;
}

.bill-catalog-cell-content {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.bill-catalog-cell-logo {
    width: 64rpx;
    height: 64rpx;

    border-radius: 32rpx;
}

.bill-catalog-cell-column {
    display: flex;
    flex-direction: column;
    align-items: flex-start;

    margin-left: 12rpx;
}

.bill-catalog-cell-name {
    font-size: 32rpx;
    color: rgba(51, 51, 51, 0.8);
}

.bill-catalog-cell-date {
    font-size: 22rpx;
    color: rgba(51, 51, 51, 0.4);
}

.bill-catalog-cell-bill {
    font-size: 38rpx;
    color: rgba(51, 51, 51, 0.8);
    font-weight: bold;

    margin-right: 12rpx;
}

.bill-catalog-cell-arrow {
    width: 12rpx;
    height: 22rpx;
}

.bill-catalog-cell-delete {
    height: 100%;
    font-size: 30rpx;
    color: white;

    position: absolute;
    top: 0;
    right: 0;

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;

    background-color: red;
}