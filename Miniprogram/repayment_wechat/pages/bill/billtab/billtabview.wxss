.bill-tabview-swapper {
    height: 98rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;

    position: fixed;
    left: 0;
    top: 0;
    right: 0;

    background-color: white;
}

.bill-tabview-item {
    width: 100%;
    height: 100%;

    display: flex;
    flex-direction: column;
    align-items: center;
    align-content: center;
}

.bill-tabview-text {
    width: 100%;
    height: 96rpx;

    font-size: 30rpx;

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;
}

.bill-tabview-line {
    width: 100%;
    height: 2rpx;
}