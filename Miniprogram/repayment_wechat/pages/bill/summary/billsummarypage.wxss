.bill-summary-count-swapper {
    height: 120rpx;

    position: fixed;
    left: 0;
    top: 400rpx;
    right: 0;

    padding-left: 24rpx;
    padding-right: 24rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;

    background-color: rgba(249, 249, 249, 1);
}

.bill-summary-function-swapper {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.bill-summary-tip {
    font-size: 46rpx;
    color: black;
}

.bill-summary-count {
    font-size: 32rpx;
    color: gray;

    margin-left: 60rpx;
    margin-top: 12rpx;
}

.bill-summary-value {
    font-size: 34rpx;
    color: rgba(0, 0, 0, 0.8);

    margin-right: 26rpx;
    margin-top: 12rpx;
}

.bill-summary-unfold {
    width: 26rpx;
    height: 12rpx;

    margin-top: 12rpx;
}

.bill-summary-section-swapper {
    width: 100%;

    margin-top: 520rpx;

    background-color: rgba(249, 249, 249, 1);
}

.bill-summary-cell {
    width: 100%;
    height: 160rpx;

    margin-bottom: 20rpx;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;

    background-color: white;
}

.bill-summary-cell-content-swapper {
    display: flex;
    flex-direction: row;
    align-items: flex-start;

    margin-left: 34rpx;
}

.bill-summary-cell-logo {
    width: 68rpx;
    height: 68rpx;

    border-radius: 34rpx;
}

.bill-summary-cell-column {
    display: flex;
    flex-direction: column;
    align-items: flex-start;

    margin-left: 12rpx;
}

.bill-summary-cell-name {
    font-size: 32rpx;
    color: black;
}

.bill-summary-cell-date {
    font-size: 28rpx;
    color: gray;

    margin-top: 10rpx;
}

.bill-summary-cell-value-swapper {
    display: flex;
    flex-direction: column;
    align-items: flex-end;

    margin-right: 34rpx;
}

.bill-summary-cell-status {
    font-size: 28rpx;
    color: black;
}

.bill-summary-cell-value {
    font-size: 38rpx;
    color: black;

    margin-top: 10rpx;
}