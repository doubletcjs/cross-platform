.bill-keyboard-swapper {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;

    display: flex;
    flex-direction: row;
    justify-content: space-between;

    padding-bottom: calc(var(--safe-area-inset-bottom));

    background-color: red;
}

.bill-keyboard-number-swapper {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;

    background: white;
}

.bill-keyboard-number {
    width: 185rpx;
    height: 90rpx;

    background-color: white;
}

.bill-keyboard-number[plain] {
    border: none;

    border-bottom: solid 1rpx rgba(249, 249, 249, 1);
    border-right: solid 1rpx rgba(249, 249, 249, 1);

    border-radius: 0;
}


.bill-keyboard-function-swapper {
    width: 100%;

    display: flex;
    flex-direction: column;
    justify-content: space-between;

    background: black;
}

.bill-keyboard-function {
    width: 100%;
    height: 50%;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    align-content: center;
}

.bill-keyboard-function-text {
    font-size: 36rpx;
    color: black;
}

.bill-keyboard-hover {
    opacity: 0.97;
    background: white;
}